%div.page
  / %div.notification チャットグループが作成されました
  %div.pageheader.clearfix
    %div.pageheader__leftside
      %div.pageheader__leftside--aboutgroup
        %p.pageheader__leftside--aboutgroup--username 
          =current_user.name
        %div.pageheader_leftside--aboutgroup--icons.fa-lg
          =link_to new_group_path , class:"icon_link" do
            %i.fa.fa-pencil-square-o.icon--white
          =link_to edit_user_path(current_user) , class:"icon_link" do
            %i.fa.fa-cog.icon--white
    %div.pageheader__rightside
      %div.pageheader__rightside__groupname 
      %div.pageheader__rightside__editbutton
        =link_to edit_group_path(current_user) , class:"icon_link" do
          %p.pageheader__rightside__editbutton--string Edit
      %p.pageheader__rightside__membername 
  %div.pagebody.clearfix
    %div.pagebody__left
      - current_user.groups.each do |group|
        = render partial: 'groups/group' ,locals: { group: group }
    %div.pagebody__main
      %div.pagefooter
        %form.pagefooter__form
          %input(placeholder="type a message" class="pagefooter__form--input")
            %label
              %i.fa.fa-image.pagefooter__form--icon
              %input(type="file" class="pagefooter--filesend")
          %input(type="submit" name="/" value="Send" class="pagefooter__form--button")
